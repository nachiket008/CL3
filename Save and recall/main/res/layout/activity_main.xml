<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLay0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/calculator_background">

    <LinearLayout
        android:id="@+id/display_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calculator_screen">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:maxLines="100"
            android:scrollbars="vertical"
            android:cursorVisible="true"
            android:textColorHint="@color/icons"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/zero_button"
            android:textColor="@color/primary_text"
            android:textSize="45sp" />
    </LinearLayout>

    <!--First Row-->

    <!--Second Row Button-->
    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/sin_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/sin_sign" />
        <Button
            android:id="@+id/cos_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/cos_sign" />
        <Button
            android:id="@+id/tan_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/tan_sign" />

        <Button
            android:id="@+id/natural_log"
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/natural_log" />
        <Button
            android:id="@+id/log"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textColor="@color/calculator_color"
            android:text="@string/log" />
    </LinearLayout>
    <!--Third Row Text-->
    <!--Fourth Row Button-->

    <!--Fifth Row Text-->

    <!--Sixth Row Button-->
    <LinearLayout
        android:layout_marginTop="1dp"
        android:id="@+id/sixth_row"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/x_power_y"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button"
            android:textColor="@color/calculator_color"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textAllCaps="false"
            android:text="@string/x_power_y" />
        <Button
            android:id="@+id/square_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/square_root" />
        <Button
            android:id="@+id/x_square"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/x_square" />
        <Button
            android:id="@+id/open_bracket"
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/open_bracket" />
        <Button
            android:id="@+id/close_bracket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textColor="@color/calculator_color"
            android:text="@string/close_bracket" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/percent" />

        <Button
            android:id="@+id/factorial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/factorial" />

        <Button
            android:id="@+id/pi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/button"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/pi" />

        <Button
            android:id="@+id/cube"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/cube" />

        <Button
            android:id="@+id/cube_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/cube_root" />
    </LinearLayout>
    <!--Seventh Row 5 Buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calculator_foreground"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Basic Calculator"
            android:layout_marginLeft="120dp"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/seventh_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/seven_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textSize="24sp"
            android:textColor="@color/calculator_color"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textAllCaps="false"
            android:text="@string/seven_button" />
        <Button
            android:id="@+id/eight_button"
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/eight_button" />
        <Button
            android:id="@+id/nine_button"
            android:layout_width="0dp"
            android:background="@drawable/button"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/nine_button" />
        <Button
            android:id="@+id/single_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textSize="24sp"
            android:padding="8dp"
            android:textColor="@color/calculator_color"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:text="DEL" />
        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:background="@drawable/button"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/clear" />
    </LinearLayout>
    <!--Eigth Row 5 Text-->
    <!--Nine Row 5 Buttons-->
    <LinearLayout
        android:id="@+id/ninth_row"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/four_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/calculator_color"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textAllCaps="false"
            android:text="@string/four_button" />
        <Button
            android:id="@+id/five_button"
            android:layout_width="0dp"
            android:background="@drawable/button"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/five_button" />
        <Button
            android:id="@+id/six_button"
            android:layout_width="0dp"
            android:background="@drawable/button"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/six_button" />
        <Button
            android:id="@+id/multiplication"
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/multiplication" />
        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:background="@drawable/button"
            android:textColor="@color/calculator_color"
            android:text="@string/division" />
    </LinearLayout>
    <!--Ten Row 5 Text-->
    <!--Eleven Row 5 Buttons-->
    <LinearLayout
        android:id="@+id/Eleven_row"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/one_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/calculator_color"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/button"
            android:textAllCaps="false"
            android:text="@string/one_button" />
        <Button
            android:id="@+id/two_button"
            android:layout_width="0dp"
            android:background="@drawable/button"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/two_button" />
        <Button
            android:id="@+id/three_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/three_button" />
        <Button
            android:id="@+id/addition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/addition" />
        <Button
            android:id="@+id/subtraction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:background="@drawable/button"
            android:textColor="@color/calculator_color"
            android:text="@string/subtraction" />
    </LinearLayout>
    <!--Twelve Row 5 Buttons-->
    <LinearLayout
        android:id="@+id/twelve_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="1dp">
        <Button
            android:id="@+id/zero_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/calculator_color"
            android:padding="8dp"
            android:layout_marginRight="1dp"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:text="@string/zero_button" />
        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:background="@drawable/button"
            android:text="@string/dot" />
        <Button
            android:id="@+id/h"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:background="@drawable/button"
            android:text="@string/history" />
        <Button
            android:background="@drawable/button"
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:text="@string/ans"/>
        <Button
            android:id="@+id/equal_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:padding="8dp"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:textColor="@color/calculator_color"
            android:background="@drawable/button"
            android:text="@string/equal_sign" />
    </LinearLayout>
</LinearLayout>
